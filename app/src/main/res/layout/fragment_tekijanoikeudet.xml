<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TekijanoikeudetFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_img">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/copyotsikko"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center"
            android:text="Tekijänoikeus ja käyttöehdot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtcopyright"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Tämä sovellus, Reittisi, on kehitetty osana Lapin Ammattikorkeakoulun Projekti -kurssin lopputyötä. Sovelluksen sisältö ja toiminnallisuus ovat tekijöiden omaisuutta, ja niiden kopiointi, jakelu tai luvaton käyttö on kielletty ilman tekijöiden lupaa."
            app:layout_constraintTop_toBottomOf="@+id/copyotsikko"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imgcopyr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/copyright"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtcopyright" />

        <TextView
            android:id="@+id/txtnimivuosi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="52dp"
            android:text="2025 H.L, I.A, K.L, M.K, S.K - Kaikki oikeudet pidätetään."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgcopyr"
            app:layout_constraintTop_toBottomOf="@+id/txtcopyright" />

        <ImageView
            android:id="@+id/logok"
            android:layout_width="201dp"
            android:layout_height="196dp"
            android:layout_marginStart="192dp"
            android:layout_marginTop="252dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtcopyright" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>